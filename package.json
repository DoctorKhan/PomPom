{
  "name": "pompom-app",
  "version": "1.0.0",
  "description": "A productivity timer for remote teams with pom-pom spirit! ğŸ•ğŸ€",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "build": "npm run css:build",
    "css:build": "tailwindcss -i ./input.css -o ./styles.css --minify",
    "css:watch": "tailwindcss -i ./input.css -o ./styles.css --watch",
    "test": "jest --verbose",
    "test:all": "jest --verbose",
    "test:core": "jest --testPathPattern='(utils|eventParser)\\.spec\\.js$' --verbose",
    "test:integration": "jest --testPathPattern='browser-tests-integration\\.spec\\.js$' --verbose",
    "test:refactoring": "jest --testPathPattern='refactoring\\.spec\\.js$' --verbose",
    "test:jest": "jest",
    "test:browser": "./run test",
    "test:basic": "open http://localhost:8000/tests",
    "test:ui": "open http://localhost:8000/tests",
    "test:firebase": "./run firebase",
    "firebase:setup": "./setup-firebase.sh",
    "firebase:deploy": "firebase deploy",
    "firebase:deploy:rules": "firebase deploy --only firestore:rules,firestore:indexes",
    "firebase:deploy:hosting": "firebase deploy --only hosting"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "firebase-mock": "^2.3.2",
    "node-fetch": "^2.7.0"
  },
  "keywords": [
    "productivity",
    "timer",
    "pomodoro",
    "team",
    "collaboration",
    "pomeranian",
    "pompom"
  ],
  "author": "Rez Khan <reswanul@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.7.0",
    "firebase-tools": "^13.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^26.1.0",
    "puppeteer": "^24.18.0",
    "tailwindcss": "^3.4.14"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DoctorKhan/Pomo.git"
  },
  "homepage": "https://aihd-b0b5b.web.app",
  "bugs": {
    "url": "https://github.com/DoctorKhan/Pomo/issues"
  }
}
